{
  "name": "i18n-excel-manager",
  "version": "2.2.1",
  "description": "All-in-one CLI tool for Angular i18n workflow: convert JSON â†” Excel, analyze codebase for missing/unused translation keys, auto-translate with AI (Gemini). Supports ngx-translate, Angular v17+, and placeholder validation.",
  "type": "module",
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./cli": "./cli.js"
  },
  "bin": {
    "i18n-excel-manager": "./cli.js"
  },
  "scripts": {
    "start": "node cli.js",
    "test": "node --test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:coverage": "c8 --reporter=json-summary --reporter=lcov --reporter=text-summary --check-coverage --branches=85 --functions=85 --lines=85 --statements=85 node --test"
  },
  "keywords": [
    "angular",
    "i18n",
    "translate",
    "translation",
    "excel",
    "xlsx",
    "converter"
  ],
  "author": "Mario Kreitz <mario.kreitz@web.de>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mariokreitz/i18n-excel-manager.git"
  },
  "bugs": {
    "url": "https://github.com/mariokreitz/i18n-excel-manager/issues"
  },
  "homepage": "https://github.com/mariokreitz/i18n-excel-manager#readme",
  "dependencies": {
    "@google/genai": "^1.37.0",
    "chalk": "^5.3.0",
    "commander": "^14.0.2",
    "exceljs": "^4.3.0",
    "figlet": "^1.6.0",
    "glob": "^13.0.0",
    "inquirer": "^13.0.1",
    "joi": "^18.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.39.2",
    "c8": "^10.1.2",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "3.0.7",
    "eslint-plugin-unicorn": "^63.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^16.2.6",
    "prettier": "^3.3.3",
    "ts-api-utils": "^2.4.0"
  },
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "*.{js,mjs,cjs}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": "prettier --write"
  }
}
