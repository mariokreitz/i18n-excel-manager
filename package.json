{
  "name": "i18n-excel-manager",
  "version": "2.1.1",
  "description": "CLI tool for converting and validating i18n JSON and Excel files with placeholder validation.",
  "type": "module",
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./cli": "./cli.js"
  },
  "bin": {
    "i18n-excel-manager": "./cli.js"
  },
  "scripts": {
    "start": "node cli.js",
    "test": "node --test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:coverage": "c8 --reporter=json-summary --reporter=lcov --reporter=text-summary --check-coverage --branches=85 --functions=85 --lines=85 --statements=85 node --test"
  },
  "keywords": [
    "i18n",
    "excel",
    "localization",
    "translation",
    "json",
    "converter",
    "cli",
    "internationalization",
    "l10n",
    "language"
  ],
  "author": "Mario Kreitz <mario.kreitz@web.de>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mariokreitz/i18n-excel-manager.git"
  },
  "bugs": {
    "url": "https://github.com/mariokreitz/i18n-excel-manager/issues"
  },
  "homepage": "https://github.com/mariokreitz/i18n-excel-manager#readme",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^14.0.2",
    "exceljs": "^4.3.0",
    "figlet": "^1.6.0",
    "inquirer": "^12.9.6",
    "joi": "^18.0.1"
  },
  "devDependencies": {
    "c8": "^10.1.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-sonarjs": "^0.25.0",
    "eslint-plugin-unicorn": "^51.0.1",
    "husky": "^9.0.11",
    "lint-staged": "^16.2.6",
    "prettier": "^3.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{js,mjs,cjs}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": "prettier --write"
  }
}
